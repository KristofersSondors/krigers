---
import fs from 'node:fs';
import path from 'node:path';

const galleryDir = path.join(process.cwd(), 'public', 'gallery');
const exts = new Set(['.jpeg', '.jpg', '.png', '.webp', '.avif', '.gif']);

const files = fs.existsSync(galleryDir)
  ? fs.readdirSync(galleryDir).filter((f) => exts.has(path.extname(f).toLowerCase())).sort()
  : [];

const images = files.map((f) => ({
  src: `/gallery/${f}`,
  alt: path.basename(f, path.extname(f)).replaceAll(/[-_]/g, ' '),
}));
---

<section id="gallery" class="gallery-section">
  <div class="container">
    <h2 class="section-heading">Gallery</h2>
  </div>

  <div class="gallery-swiper" data-gallery-swiper>
    <div class="gallery-swiper-wrapper">
      {images.map((img, i) => (
        <div class="gallery-slide" data-index={i}>
          <div class="gallery-card">
            <img src={img.src} alt={img.alt} loading="lazy" draggable="false" />
          </div>
        </div>
      ))}
    </div>
    <div class="gallery-nav">
      <button class="gallery-btn prev" aria-label="Previous photo">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M15 18l-6-6 6-6"/>
        </svg>
      </button>
      <div class="gallery-dots"></div>
      <button class="gallery-btn next" aria-label="Next photo">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M9 18l6-6-6-6"/>
        </svg>
      </button>
    </div>
  </div>
</section>

<script>
  class GallerySwiper {
    container: HTMLElement;
    wrapper: HTMLElement;
    slides: HTMLElement[];
    currentIndex: number = 0;
    dotsContainer: HTMLElement;

    constructor(container: HTMLElement) {
      this.container = container;
      this.wrapper = container.querySelector('.gallery-swiper-wrapper') as HTMLElement;
      this.slides = Array.from(container.querySelectorAll('.gallery-slide'));
      this.dotsContainer = container.querySelector('.gallery-dots') as HTMLElement;

      this.init();
    }

    init() {
      this.slides.forEach((_, i) => {
        const dot = document.createElement('button');
        dot.className = 'gallery-dot';
        dot.setAttribute('aria-label', `Go to photo ${i + 1}`);
        dot.addEventListener('click', () => this.goTo(i));
        this.dotsContainer.appendChild(dot);
      });

      const prevBtn = this.container.querySelector('.gallery-btn.prev');
      const nextBtn = this.container.querySelector('.gallery-btn.next');

      prevBtn?.addEventListener('click', () => this.prev());
      nextBtn?.addEventListener('click', () => this.next());

      this.container.addEventListener('keydown', (e) => {
        if (e.key === 'ArrowLeft') this.prev();
        if (e.key === 'ArrowRight') this.next();
      });

      let startX = 0;
      let isDragging = false;

      this.wrapper.addEventListener('mousedown', (e) => {
        isDragging = true;
        startX = e.pageX;
      });

      this.wrapper.addEventListener('touchstart', (e) => {
        startX = e.touches[0].pageX;
      });

      document.addEventListener('mouseup', () => {
        isDragging = false;
      });

      this.wrapper.addEventListener('mousemove', (e) => {
        if (!isDragging) return;
        const diff = startX - e.pageX;
        if (Math.abs(diff) > 50) {
          if (diff > 0) this.next();
          else this.prev();
          isDragging = false;
        }
      });

      this.wrapper.addEventListener('touchend', (e) => {
        const diff = startX - e.changedTouches[0].pageX;
        if (Math.abs(diff) > 50) {
          if (diff > 0) this.next();
          else this.prev();
        }
      });

      this.slides.forEach((slide, i) => {
        slide.addEventListener('click', () => {
          if (i !== this.currentIndex) {
            this.goTo(i);
          }
        });
      });

      this.update();
    }

    goTo(index: number) {
      if (index < 0) {
        this.currentIndex = this.slides.length - 1;
      } else if (index >= this.slides.length) {
        this.currentIndex = 0;
      } else {
        this.currentIndex = index;
      }
      this.update();
    }

    prev() {
      this.goTo(this.currentIndex - 1);
    }

    next() {
      this.goTo(this.currentIndex + 1);
    }

    update() {
      const len = this.slides.length;
      this.slides.forEach((slide, i) => {
        let offset = i - this.currentIndex;

        if (offset > len / 2) offset -= len;
        if (offset < -len / 2) offset += len;

        slide.classList.remove('active', 'prev', 'next', 'far-prev', 'far-next');

        if (offset === 0) {
          slide.classList.add('active');
        } else if (offset === -1 || (this.currentIndex === 0 && i === len - 1)) {
          slide.classList.add('prev');
        } else if (offset === 1 || (this.currentIndex === len - 1 && i === 0)) {
          slide.classList.add('next');
        } else if (offset < -1) {
          slide.classList.add('far-prev');
        } else {
          slide.classList.add('far-next');
        }
      });

      const dots = this.dotsContainer.querySelectorAll('.gallery-dot');
      dots.forEach((dot, i) => {
        dot.classList.toggle('active', i === this.currentIndex);
      });
    }
  }

  document.querySelectorAll('[data-gallery-swiper]').forEach((container) => {
    new GallerySwiper(container as HTMLElement);
  });
</script>

<style>
  .gallery-section {
    padding-block: var(--section-py);
    overflow: hidden;
  }

  .gallery-swiper {
    position: relative;
    width: 100%;
    padding: var(--space-8) 0;
  }

  .gallery-swiper-wrapper {
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 700px;
    position: relative;
    cursor: grab;
  }

  .gallery-swiper-wrapper:active {
    cursor: grabbing;
  }

  /* Slides */
  .gallery-slide {
    position: absolute;
    width: clamp(320px, 40vw, 500px);
    transition: all 0.5s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    opacity: 0;
    pointer-events: none;
    z-index: 1;
  }

  .gallery-slide.active {
    transform: translateX(0) scale(1);
    opacity: 1;
    z-index: 10;
    pointer-events: auto;
  }

  .gallery-slide.prev {
    transform: translateX(-70%) scale(0.75) rotateY(15deg);
    opacity: 0.6;
    z-index: 5;
    pointer-events: auto;
    cursor: pointer;
  }

  .gallery-slide.next {
    transform: translateX(70%) scale(0.75) rotateY(-15deg);
    opacity: 0.6;
    z-index: 5;
    pointer-events: auto;
    cursor: pointer;
  }

  .gallery-slide.far-prev {
    transform: translateX(-140%) scale(0.5) rotateY(25deg);
    opacity: 0;
    z-index: 1;
  }

  .gallery-slide.far-next {
    transform: translateX(140%) scale(0.5) rotateY(-25deg);
    opacity: 0;
    z-index: 1;
  }

  /* Card */
  .gallery-card {
    background: var(--color-bg-elevated);
    border: 3px solid var(--color-border);
    border-radius: 1.25rem;
    overflow: hidden;
    box-shadow: 0 8px 40px rgba(45, 42, 38, 0.12);
    transition: transform 0.3s ease, box-shadow 0.3s ease, border-color 0.3s ease;
  }

  .gallery-slide.active .gallery-card {
    border-color: var(--color-accent);
    box-shadow: 0 20px 60px rgba(45, 42, 38, 0.2), 0 0 0 4px rgba(var(--color-accent-rgb, 139, 90, 43), 0.15);
  }

  .gallery-card img {
    width: 100%;
    height: auto;
    display: block;
    user-select: none;
    pointer-events: none;
  }

  /* Navigation */
  .gallery-nav {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-6);
    margin-top: var(--space-6);
  }

  .gallery-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 48px;
    height: 48px;
    border: 2px solid var(--color-border);
    border-radius: 50%;
    background: var(--color-bg-elevated);
    color: var(--color-text);
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .gallery-btn:hover {
    border-color: var(--color-accent);
    color: var(--color-accent);
    transform: scale(1.05);
  }

  .gallery-dots {
    display: flex;
    gap: var(--space-2);
  }

  .gallery-dot {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    border: 2px solid var(--color-border);
    background: transparent;
    cursor: pointer;
    transition: all 0.2s ease;
    padding: 0;
  }

  .gallery-dot:hover {
    border-color: var(--color-accent);
  }

  .gallery-dot.active {
    background: var(--color-accent);
    border-color: var(--color-accent);
    transform: scale(1.2);
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .gallery-slide {
      width: clamp(280px, 60vw, 450px);
    }

    .gallery-slide.prev {
      transform: translateX(-55%) scale(0.7);
    }

    .gallery-slide.next {
      transform: translateX(55%) scale(0.7);
    }

    .gallery-swiper-wrapper {
      min-height: 500px;
    }
  }

  @media (max-width: 767px) {
    .gallery-slide {
      width: 80vw;
    }

    .gallery-slide.prev,
    .gallery-slide.next {
      opacity: 0.3;
      transform: translateX(-85%) scale(0.55);
    }

    .gallery-slide.next {
      transform: translateX(85%) scale(0.55);
    }

    .gallery-swiper-wrapper {
      min-height: 450px;
    }
  }
</style>
